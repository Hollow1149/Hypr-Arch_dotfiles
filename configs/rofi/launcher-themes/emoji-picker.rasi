/* config - Emojij Picker */

configuration {
    show-icons:                 true;
    font:                        "JetBrains Mono Nerd Font 12";
}

/* Config and colors ----------------------------------------------- */

@import "default.rasi"

/* Main Window ------------------------------------------------ */
window {
    width:                       40%;
    height:                      49%;
    margin:                      0.5%;
    padding:                     1% 0.5%;
    anchor:                      west;
    location:                    south east;
}

/* Main Box --------------------------------------------------- */
mainbox {

    children:                    [ "inputbar", "listview" ];
    background-color:            transparent;

    spacing:                     1.25%;
    margin:                      0%;
    border-color:                @selected;
    border-radius:               4.5% 2.5%; 
    padding:                     1% 0.5%;
}

/* Inputbar --------------------------------------------------- */
inputbar {
    children:                    [ "entry" ];
    border-color:                @selected;
    background-color:            transparent;
    padding:                     7px 6px;
    orientation:                 horizontal;
    border:                      2px;
    border-radius:               4.5% 2.5%;
}

textbox-prompt-colon {
    expand:                      false;
    str:                         "::";
    background-color:            transparent;
    text-color:                  inherit;
}

/* Entry input ------------------------------------------------ */
entry {
    cursor:                      inherit;
    placeholder:                 "Search";
    placeholder-color:           inherit;
    expand:                      true;
    border-radius:               4.5% 2.5%;
    background-color:            black / 48%;
    text-color:                  @text;
    padding:                     16px;
}

/* Listview --------------------------------------------------- */
listview {
    cursor:                      "default";
    columns:                     6;
    lines:                       4;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    
    background-color:            transparent;
    text-color:                  @text;

    spacing:                     0%;
    margin:                      0%;
    padding:                     0%;
}

button {
    padding:                     1.5%;
    border-radius:               1.5%;
    background-color:            @shade-shadow;
    text-color:                  @text;
    cursor:                      pointer;
}
button selected {
    background-color:            @shade-bg;
    border:                      0.13% solid;
    border-color:                @selected;
    text-color:                  white;
}

/* Elements --------------------------------------------------- */
element {
    cursor:                      pointer;
    border-radius:               1.8% 1%;
    background-color:            transparent;
    orientation:                 vertical;

    spacing:                     0%;
    margin:                      0%;
    padding:                     1% 0%;
}

element-icon {
    background-color:            transparent;
    size:                        5%;
    cursor:                      inherit;
}
