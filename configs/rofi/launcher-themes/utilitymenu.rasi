/* config - Utility Menu */

configuration {
	  modi:                        "drun";
    show-icons:                  false;
  	drun-display-format:         "{name}";
    font:                        "JetBrains Mono Nerd Font 12";
}

/* Config and colors ----------------------------------------------- */

@import "default.rasi"

/* Main Window ------------------------------------------------ */
window {
    width:                       25%;
    height:                      40%;
    padding:                     1% 0.5%;
}

/* Main Box --------------------------------------------------- */
mainbox {

    children:                    [ "inputbar", "listview"];
    background-color:            transparent;

    spacing:                     1.25%;
    border-color:                @selected;
    padding:                     0.7% 0.7%;
}

/* Inputbar --------------------------------------------------- */
inputbar {
    children:                    [ "entry" ];
    border-color:                @selected;
    background-color:            transparent;
    padding:                     7px 6px;
    orientation:                 horizontal;
    border:                      2px;
    border-radius:               4.5% 2.5%;
}

textbox-prompt-colon {
    expand:                      false;
    str:                         "::";
    background-color:            transparent;
    text-color:                  inherit;
}

/* Entry input ------------------------------------------------ */
entry {
    cursor:                      inherit;
    placeholder:                 "Search";
    placeholder-color:           inherit;
    expand:                      true;
    border-radius:               4.5% 2.5%;
    background-color:            black / 48%;
    text-color:                  @text;
    padding:                     16px;
}

/* Listview --------------------------------------------------- */
listview {
    cursor:                      "default";
    columns:                     1;
    lines:                       5;
    cycle:                       true;
    dynamic:                     true;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    
    background-color:            transparent;
    text-color:                  @text;
}

/* Elements --------------------------------------------------- */
element {
    cursor:                      pointer;
    border-radius:               10px 10px;
    background-color:            transparent;
    orientation:                 horizontal;

    spacing:                     0.8%;
    padding:                     10px 20px;
}

element-text {
  text-color:                    @text;
  markup:                        true;
  horizontal-align:              0;
}

element selected.normal {
    border:                      0px;
} 
